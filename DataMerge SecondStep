import os
import pandas as pd
import tkinter as tk
from tkinter import filedialog, messagebox

def select_input_folder():
    folder = filedialog.askdirectory(title="Wybierz folder z plikami CSV")
    if folder:
        input_entry.delete(0, tk.END)
        input_entry.insert(0, folder)

def select_output_file():
    file = filedialog.asksaveasfilename(
        title="Zapisz wynikowy plik CSV",
        defaultextension=".csv",
        filetypes=[("CSV", "*.csv")]
    )
    if file:
        output_entry.delete(0, tk.END)
        output_entry.insert(0, file)

def merge_all():
    input_folder = input_entry.get()
    output_file = output_entry.get()

    if not input_folder:
        messagebox.showerror("Błąd", "Nie wybrano folderu wejściowego")
        return
    if not output_file:
        messagebox.showerror("Błąd", "Nie wybrano pliku wyjściowego")
        return

    csv_files = [
        f for f in os.listdir(input_folder)
        if f.lower().endswith(".csv")
    ]

    if not csv_files:
        messagebox.showerror("Błąd", "Brak plików CSV w folderze")
        return

    merged = []

    for file in csv_files:
        file_path = os.path.join(input_folder, file)
        df = pd.read_csv(file_path)
        merged.append(df)

    final_df = pd.concat(merged, ignore_index=True)

    final_df.to_csv(output_file, index=False)

    messagebox.showinfo(
        "Gotowe",
        f"Scalono {len(csv_files)} plików\n"
        f"Liczba wierszy: {len(final_df)}\n\n"
        f"Zapisano do:\n{output_file}"
    )

# =========================
# GUI
# =========================

root = tk.Tk()
root.title("Merge wszystkich plików CSV")

frame = tk.Frame(root, padx=10, pady=10)
frame.pack()

# Folder wejściowy
tk.Label(frame, text="Folder z plikami CSV:").grid(row=0, column=0, sticky="w")
input_entry = tk.Entry(frame, width=60)
input_entry.grid(row=1, column=0, padx=5, pady=5)
tk.Button(frame, text="Wybierz folder", command=select_input_folder)\
    .grid(row=1, column=1, padx=5)

# Plik wyjściowy
tk.Label(frame, text="Plik wynikowy CSV:").grid(row=2, column=0, sticky="w")
output_entry = tk.Entry(frame, width=60)
output_entry.grid(row=3, column=0, padx=5, pady=5)
tk.Button(frame, text="Wybierz plik", command=select_output_file)\
    .grid(row=3, column=1, padx=5)

# Start
tk.Button(
    frame,
    text="Scal wszystko do jednego CSV",
    command=merge_all,
    height=2
).grid(row=4, column=0, columnspan=2, pady=15)

root.mainloop()
